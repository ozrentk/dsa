<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Sharp Media Group</title>
    @Styles.Render("~/Content/css")
    @RenderSection("css", required: false)
    <script src="~/Scripts/require.js"></script>
    @RenderSection("scripts", required: false)
</head>
<body>
    @if (HttpContext.Current.User.Identity.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Sharp Media Group", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        @if (HttpContext.Current.User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Compare", "Compare", "Home")</li>
                            <li>@Html.ActionLink("Excel", "Index", "Excel")</li>
                            <li>@Html.ActionLink("Configuration", "Index", "Config")</li>
                        }
                        @if (HttpContext.Current.User.IsInRole("User"))
                        {
                            <li>@Html.ActionLink("Compare", "Compare", "Home")</li>
                            <li>@Html.ActionLink("Business list", "MultipleBusinesses", "Home")</li>
                            <li>@Html.ActionLink("Excel", "Index", "Excel")</li>
                        }
                    </ul>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                        @Html.AntiForgeryToken()

                        <ul class="nav navbar-nav navbar-right">
                            @*<li>
                                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                                </li>*@
                            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>
