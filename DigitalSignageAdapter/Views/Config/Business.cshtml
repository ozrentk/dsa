@model DigitalSignageAdapter.Models.Config.Business

@{
    ViewBag.Title = "Business";
    string title = "Business";
    if (!Model.Code.HasValue)
    {
        title = "Add new Business";
    }
}

<h2>@title</h2>
<hr />
@using (Html.BeginForm("Business", "Config", FormMethod.Post, new { @class = "user-form" }))
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Code)
        @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <p />
    <div class="well well-sm">
        <button type="submit" id="btnSaveConfig" class="btn btn-primary">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            Save
        </button>
        <a class="btn btn-primary" href="@Url.Action("Businesses")">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            Cancel
        </a>
    </div>
    if (Model.IsFailed)
    {
        <p style="height: 30px">&nbsp;</p>
        <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Error!</strong> There was a problem with saving the Business.
        </div>
    }
}

