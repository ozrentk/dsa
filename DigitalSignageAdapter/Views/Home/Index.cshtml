@using DigitalSignageAdapter.Extensions

@{
    ViewBag.Title = "Home Page";
}

@if (!HttpContext.Current.User.Identity.IsAuthenticated)
{
    <h2>Please use top menu to log in or register.</h2>
    return;
}

<div class="row">
    @if (HttpContext.Current.User.IsAllowedGet("Config", "Index"))
    {
        <div class="col-lg-6">
            <h3>Overview</h3>
            <p>All the created objects are accounted for and displayed in the system overview.</p>
            <p>@Html.ActionLink("Go »", "Index", "Config", null, new { @class = "btn btn-primary" })</p>
        </div>
    }
    @if (HttpContext.Current.User.IsAllowedGet("Config", "Options"))
    {
        <div class="col-lg-6">
            <h3>Options</h3>
            <p>Review and/or modify system parameters. You can change the main system UTC offset, how frequently the system takes snapshots (backup) of the Digital Signage data, or last interval (number of days) the system uses to ask for data from Digital Signage.</p>
            <p>@Html.ActionLink("Go »", "Options", "Config", null, new { @class = "btn btn-primary" })</p>
        </div>
    }
    @if (HttpContext.Current.User.IsAllowedGet("Config", "Businesses"))
    {
        <div class="col-lg-6">
            <h3>Business management</h3>
            <p>Review and/or modify each business and lines. Each business and its lines have names and <b>unique</b> codes they use to connect to the Digital Signage. You can add new data, modify or delete existing data.</p>
            <p class="text-danger">You cannot remove business that already has snapshots of data (backed up data), because this would delete the data history and it is not supported.</p>
            <p>@Html.ActionLink("Go »", "Businesses", "Config", null, new { @class = "btn btn-primary" })</p>
        </div>
    }
    @if (HttpContext.Current.User.IsAllowedGet("Home", "Compare"))
    {
        <div class="col-lg-6">
            <h3>Comparison</h3>
            <p>Compare data by business, line or employee</p>
            <p>@Html.ActionLink("Go »", "Compare", "Home", null, new { @class = "btn btn-primary" })</p>
        </div>
    }
    @if (HttpContext.Current.User.IsAllowedGet("Excel", "Index"))
    {
        <div class="col-lg-6">
            <h3>Excel with details</h3>
            <p>Download Excel workbook with all the details.</p>
            <p>@Html.ActionLink("Go »", "Index", "Excel", null, new { @class = "btn btn-primary" })</p>
        </div>
    }
</div>

